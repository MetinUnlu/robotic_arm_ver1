<launch>

  <!-- Load joint controller configurations from YAML file to parameter server -->
  <rosparam file="$(find robotic_arm_ver1)/config/mbot_control.yaml" command="load"/>

  <!-- load the controllers -->
  <node name="control_spawner" pkg="controller_manager" type="spawner" respawn="false"
	output="screen" ns="/mbot" args="	joint_state_controller
					  												shoulder_pitch_joint_position_controller
					  												arm_joint_position_controller
                                    arm_roll_joint_position_controller
                                    forearm_joint_position_controller
																		hand_joint_position_controller"/>

  <!-- convert joint states to TF transforms for rviz, etc -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"
	respawn="false" output="screen">
    <remap from="/joint_states" to="/mbot/joint_states" />
  </node>

</launch>
